nextflow_process {

    name "Test Process SHOVILL"
    script "modules/shovill/main.nf"
    process "SHOVILL"

    test("Should run without failures") {

        when {
            params {
                // define parameters here. Example:
                outdir = "tests/results"
                min_contig_len = 600
            }
            process {
                """
                // define inputs of the process here. Example:
                input[0] = Channel.of([ [sample_id:'Test'], [ file("ftp://ftp.sra.ebi.ac.uk/vol1/run/ERR117/ERR11797957/LC06-22-RV4-P64-C10_R1.fastq.gz"), file("ftp://ftp.sra.ebi.ac.uk/vol1/run/ERR117/ERR11797957/LC06-22-RV4-P64-C10_R2.fastq.gz") ] ])
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out.get(0)).match()
        }

    }

}
